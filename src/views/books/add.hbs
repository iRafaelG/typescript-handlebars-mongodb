<div class="col-md-6 mx-auto">
    <div class="card card-body">
        <form action="/books/add" method="post">
            <div class="form-group">
                <input type="text" name="title" placeholder="Book title" class="form-control" autofocus required>
            </div>
            <div class="form-group">
                <input type="text" name="author" placeholder="Author name" class="form-control" required>
            </div>
            <div class="form-group">
                <input type="text" name="isbn" placeholder="ISBN" pattern="(?:(?=.{17}$)97[89][ -](?:[0-9]+[ -]){2}[0-9]+[ -][0-9]|97[89][0-9]{10}|(?=.{13}$)(?:[0-9]+[ -]){2}[0-9]+[ -][0-9Xx]|[0-9]{9}[0-9Xx])" class="form-control" required>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Save</button>
            </div>
        </form>
    </div>
</div>